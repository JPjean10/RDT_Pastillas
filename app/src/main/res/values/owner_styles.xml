<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    toolbar-->
    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MaterialToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="background">@color/purple_200</item>
        <item name="titleTextColor">@color/white</item>
        <item name="title">@string/app_name</item>
    </style>
    <!-- ______________________________________________________ -->

    <!--    MaterialBoton -->
    <style name="MaterialBoton">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@android:color/white</item>
    </style>
    <!-- ______________________________________________________ -->

    <!-- select -->
    <style name="MyDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/charcoal_gray</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>
    <!-- ______________________________________________________ -->

    <!--    textfield cabesera-->
    <style name="textfield_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/cyan</item>
        <item name="boxBackgroundColor">@color/cyan_translucent</item>
        <item name="android:textColorHint">@color/charcoal_gray</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="startIconTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="hintTextColor">@color/charcoal_gray</item>
    </style>

    <!--   textfield normal -->
    <style name="textfield_TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/charcoal_gray</item>
        <item name="android:paddingStart">40dp</item>
    </style>

    <!--   textfield tipo boton -->
    <style name="textfield_TextInputEditTextFecha" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/charcoal_gray</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">text</item>
    </style>
    <!-- ______________________________________________________ -->

    <!--    titulo dailog-->
    <style name="tiulo_dialog">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--    titulo activity-->
    <style name="tiulo">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    titulo link-->
    <style name="link">
        <item name="minWidth">48dp</item>
        <item name="minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12dp</item>
        <item name="background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    titulo boton-->
    <style name="boton">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@android:color/white</item>
    </style>


    <!-- Estilo nuevo para el CheckBox -->
    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>

