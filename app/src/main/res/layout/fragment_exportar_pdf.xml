<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:padding="20dp"
    tools:context=".activity.menu_lateral.ui.reporte_fragment.ui.exportar_pdf_fragment.ExportarPdfFragment">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar Reporte PDF"
        style="@style/tiulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSeleccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Rango de Fechas"
                android:textColor="@color/purple_500"
                android:textStyle="bold" />

            <!-- Selector Fecha Inicio -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textfield_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Desde"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/btn_FechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textfield_TextInputEditTextFecha"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Selector Fecha Fin -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textfield_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hasta"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/btn_FechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textfield_TextInputEditTextFecha"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExportar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="DESCARGAR REPORTE"
        app:icon="@android:drawable/stat_sys_download"
        style="@style/MaterialBoton"
        app:layout_constraintTop_toBottomOf="@id/cardSeleccion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="El archivo se guardarÃ¡ en la carpeta de descargas."
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnExportar" />

</androidx.constraintlayout.widget.ConstraintLayout>