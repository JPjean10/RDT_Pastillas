<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.login.Login">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titulo"
                android:text="Bienvenido\nMi pastillas"
                android:textAlignment="center"
                android:layout_marginBottom="25dp"
                style="@style/tiulo"/>

            <!-- Caja de Texto usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                app:startIconDrawable="@drawable/ic_user"
                style="@style/textfield_TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:paddingStart="40dp"
                    style="@style/textfield_TextInputEditText"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Caja de Texto contraseña -->
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/ic_lock_24"
                style="@style/textfield_TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_contrasena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:paddingStart="40dp"
                    style="@style/textfield_TextInputEditText"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Caja de Texto btn_iniciar_sesion -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_iniciar_sesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                app:icon="@drawable/ic_login_24"
                app:cornerRadius="8dp"
                style="@style/boton"/>

            <TextView
                android:id="@+id/btn_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:layout_gravity="start"
                style="@style/link"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>