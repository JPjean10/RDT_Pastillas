<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_agregar"
                style="@style/MaterialBoton"
                android:layout_width="1.1in"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:icon="@drawable/ic_add_24"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seleccione el mes"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                app:startIconDrawable="@drawable/ic_today_24"
                style="@style/textfield_TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/btn_seleccionar_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textfield_TextInputEditTextFecha"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView para la lista, AHORA FUERA DEL OTRO LINEARLAYOUT -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_presion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
