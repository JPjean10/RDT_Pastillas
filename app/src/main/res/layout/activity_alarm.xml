<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".activity.alarm_activity.AlarmActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar pastilla"
        android:layout_marginBottom="32dp"
        style="@style/tiulo"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:fillViewport="true"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- El TextView ahora tiene height="wrap_content" para crecer -->
            <TextView
                android:id="@+id/txt_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando medicamentos..."
                android:textSize="22sp"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                style="@style/tiulo"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_desactivar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desactivar"
        app:cornerRadius="8dp"
        android:layout_marginBottom="16dp"
        style="@style/boton"/>

    <Button
        android:id="@+id/btn_suspender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspender 30 min"
        style="@style/boton"/>

</LinearLayout>
